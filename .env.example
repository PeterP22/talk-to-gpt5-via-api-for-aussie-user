# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Optional: Set model (defaults to gpt-5 if not specified)
MODEL_NAME=gpt-5

# Optional: Set max tokens for responses
MAX_TOKENS=2000

# Optional: Set temperature (0-2, default 0.7)
TEMPERATURE=0.7

# GPT-5 specific parameters
# Verbosity: low, medium, high (controls response detail)
VERBOSITY=medium

# Text format: text, json_object, json_schema
TEXT_FORMAT=text

# Reasoning effort: minimal, low, medium, high (controls reasoning depth)
REASONING_EFFORT=medium